{
  "compilerOptions": {
    "lib": ["es5", "es6"],
	  "target": "esnext",
	  "allowJs": false,
	  "moduleResolution": "node",
	  "skipLibCheck": true,
	  "skipDefaultLibCheck": true,
	  "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": ".",
    "rootDir": "src",
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["**/node_modules",
  //  "**/__tests__/*", 
  //  "**/__e2e__/*"
  ],
}
